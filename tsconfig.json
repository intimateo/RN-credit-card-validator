{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "jsx": "react-native",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noEmit": true,
      "baseUrl": "./src",
      "typeRoots" : ["./src/@types", "./node_modules/@types"]
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules",
      "**/*.test.tsx"
  ]
}
